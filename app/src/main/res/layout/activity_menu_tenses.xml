<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menuTenses">

    <Button
        android:id="@+id/btnVocabulary"
        android:layout_width="285dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/vocabulary2"
        android:gravity="center"
        android:text="Vocabulary" />

    <Button
        android:id="@+id/btnPresent"
        android:layout_width="285dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#E7323D"
        android:gravity="center"
        android:text="Present tense"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnPastL1"
        android:layout_width="285dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#32999B"
        android:text="Past tense"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnFutureL1"
        android:layout_width="285dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#207A7A"
        android:text="Future tense"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnScore"
        android:layout_width="285dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#EBEBEB"
        android:text="Lesson score" />

</LinearLayout>