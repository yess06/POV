<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lesson8_fillverbs_future">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView910"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In two years Leo the lion"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL81"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView911"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="excited."
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView912"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="He"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL82"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView913"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="have finally saved enough money to buy a ticket to fly to the moon.   "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView914"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" One week before leaving he"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL83"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView915"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to a bar with his friend Samuel the snake."
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView916"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samuel and Leo"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL84"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textView917"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="twelve beers each.  "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView918"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samuel"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL85"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView919"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="so drunk that he’ll fall on the floor.   "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView920"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The bartender "
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL86"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView921"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“I had no idea you were so drunk.  "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView922"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="It is time for you to go home.”   "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView923"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="So Leo and Samuel"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL87"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView924"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="the bar.  "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView925"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samuel "
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView926"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to drive his car home.   "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView927"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" “If you drive now, you will have a run-in with the law,” Leo "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/fillFutL89"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView928"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="But Samuel "
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL810"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView929"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="his car anyway.   "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView930"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="After driving one mile, he is gonna be pulled over.  "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView931"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The policeman "
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL811"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textView932"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="that Samuel is drunk.   "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView933"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" “Now you’re going to be thrown in jail,” the policeman "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/fillFutL812"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView934"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The next day Samuel "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/fillFutL813"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView935"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leo to borrow money so he can hire a lawyer. "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView936"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“I hope that he can get me off.  I don’t want them to throw the book at me,” Samuel "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/fillFutL814"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textView937"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Leo"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/fillFutL815"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView938"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samuel money for the lawyer.   "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView939"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“Then Leo will say, “I have no money.  I can’t go to the moon.”"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView940"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="He is very upset. "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView941"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="He"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/fillFutL816"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textView942"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="he shouldn’t have let Samuel drive. "
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#E7323D"
                android:onClick="qualification"
                android:text="Check Score"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical|center_horizontal"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>