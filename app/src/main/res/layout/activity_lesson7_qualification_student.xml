<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lesson7_qualification_student">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView259"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtquall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView260"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtnamequali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Armando"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView262"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtemailqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="armando@gmail.com"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView264"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualification:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtqualqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</LinearLayout>