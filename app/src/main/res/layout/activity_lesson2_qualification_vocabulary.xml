<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson2_qualification_vocabulary">
    <ImageView
        android:id="@+id/imageViewlessontwo"
        android:layout_width="287dp"
        android:layout_height="313dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186"
        app:srcCompat="@drawable/greatjob" />

    <TextView
        android:id="@+id/txtlessontwohigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score: 20"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtlessontwoscore"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtlessontwoscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 10"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewlessontwo"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/btnlessontwocorrectans"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:backgroundTint="#E7323D"
        android:text="Correct answers"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtlessontwohigh"
        app:layout_constraintVertical_bias="0.216" />

    <Button
        android:id="@+id/btnlessontwoactivities"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:backgroundTint="#207A7A"
        android:text="Activities"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtlessontwohigh"
        app:layout_constraintVertical_bias="0.216" />
</androidx.constraintlayout.widget.ConstraintLayout>