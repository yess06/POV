<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lesson7_qualification_lesson">

    <ImageView
        android:id="@+id/imageViewlessontwo"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        app:srcCompat="@drawable/greatjob" />

    <TextView
        android:id="@+id/txtlessontwohigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="High Score: 100"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1349"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Score: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scorequal21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnlessontwoactivities"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#207A7A"
        android:text="submit"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/button81"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#207A7A"
        android:text="try again"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_vertical|center_horizontal"/>

</LinearLayout>