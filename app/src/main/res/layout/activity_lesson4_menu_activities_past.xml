<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson4_menu_activities_past">
    <Button
        android:id="@+id/button3"
        android:layout_width="337dp"
        android:layout_height="122dp"
        android:layout_marginTop="172dp"
        android:background="#EBEBEB"
        android:drawableLeft="@drawable/listen"
        android:text="Listen and Read"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFill"
        android:layout_width="337dp"
        android:layout_height="122dp"
        android:layout_marginTop="20dp"
        android:background="#EBEBEB"
        android:drawableLeft="@drawable/fill"
        android:text="Fill the verbs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/btnAnswer"
        android:layout_width="337dp"
        android:layout_height="122dp"
        android:layout_marginTop="20dp"
        android:background="#EBEBEB"
        android:drawableLeft="@drawable/question"
        android:text="Answer the Question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFill"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>